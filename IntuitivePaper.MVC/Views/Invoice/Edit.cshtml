@model IntuitivePaper.Application.Invoice.Commands.EditInvoice.EditInvoiceCommand
@using IntuitivePaper.Application.InvoiceItem.Commands.CreateInvoiceItem

@{
    ViewData["Title"] = "Edytuj fakturę";
}

<h1>Edytuj</h1>

<hr />

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Number" class="form-label">Numer faktury</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlaceOfIssue" class="form-label">Miejsce wystawienia</label>
                <input asp-for="PlaceOfIssue" class="form-control" />
                <span asp-validation-for="PlaceOfIssue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="form-label">Data wystawienia</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="SellerName" class="form-label">Nazwa sprzedawcy</label>
                <input asp-for="SellerName" class="form-control" />
                <span asp-validation-for="SellerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellerAddress" class="form-label">Adres sprzedawcy</label>
                <input asp-for="SellerAddress" class="form-control" />
                <span asp-validation-for="SellerAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellerTaxId" class="form-label">NIP sprzedawcy</label>
                <input asp-for="SellerTaxId" class="form-control" />
                <span asp-validation-for="SellerTaxId" class="text-danger"></span>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="BuyerName" class="form-label">Nazwa nabywcy</label>
                <input asp-for="BuyerName" class="form-control" />
                <span asp-validation-for="BuyerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuyerAddress" class="form-label">Adres nabywcy</label>
                <input asp-for="BuyerAddress" class="form-control" />
                <span asp-validation-for="BuyerAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuyerTaxId" class="form-label">NIP nabywcy</label>
                <input asp-for="BuyerTaxId" class="form-control" />
                <span asp-validation-for="BuyerTaxId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="SaleDate" class="form-label">Data sprzedaży</label>
                <input asp-for="SaleDate" class="form-control" type="date" />
                <span asp-validation-for="SaleDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentMethod" class="form-label">Sposób zapłaty</label>
                <input asp-for="PaymentMethod" class="form-control" type="text" />
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentDate" class="form-label">Termin płatności</label>
                <input asp-for="PaymentDate" class="form-control" type="date" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Bank" class="form-label">Bank</label>
                <input asp-for="Bank" class="form-control" />
                <span asp-validation-for="Bank" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccountNumber" class="form-label">Numer konta</label>
                <input asp-for="AccountNumber" class="form-control" type="text" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-action="Index" class="btn btn-custom">Wróć do listy</a>
        <a class="btn btn-success" asp-controller="Invoice" asp-action="GeneratePdf" asp-route-id="@Model.Id">Generuj PDF</a>
    </div>
</form>

<div>
    <partial name="_CreateInvoiceItem" model="new CreateInvoiceItemCommand(){ InvoiceId = Model.Id }" />
    <div class="mt-3 mb-3">
    </div>
</div>

<div id="invoiceItem" class="row" data-id="@Model.Id"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/InvoiceItem/Edit.js"></script>
}

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-custom {
        background-color: yellowgreen;
        border-color: yellowgreen;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
    }

    .btn-success {
        background-color: forestgreen;
        border-color: forestgreen;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
    }
</style>
